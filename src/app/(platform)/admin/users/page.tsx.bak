// TypeScript interface for the API response
interface UsersApiResponse {
  success: boolean;
  users: User[];
  totalCount: number;
  error?: string;
}

// Define types for the user data
type User = {
  id: string;
  email: string | null;
  firstName: string;
  lastName: string;
  userType: UserType;
  isActive: boolean;
  emailVerified: boolean;
  phoneVerified: boolean;
  createdAt: string;
  updatedAt: string;
  phoneNumber?: string;
  address?: string;
  city?: string;
  state?: string;
  zipCode?: string;
