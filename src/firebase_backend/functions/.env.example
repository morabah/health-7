# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email@project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----\n"

# Application Environment
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:5001/your-project-id/your-region

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-app.web.app

# Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window per IP

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000  # 24 hours in ms

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# Storage (if using Firebase Storage)
STORAGE_BUCKET=your-project-id.appspot.com

# ReCAPTCHA (if using for registration/login)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn

# Feature Flags
FEATURE_EMAIL_VERIFICATION=false
FEATURE_PHONE_AUTH=false
FEATURE_MAINTENANCE_MODE=false
